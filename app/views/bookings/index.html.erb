<h1>my bookings</h1>
<br>
<div class="flex-box">
  <div class="card">
    <div class="my-ship">
    <h4>My futur travels</h4>
    </div>
    <ul class="list-group list-group-flush">
      <% @bookings.each do |booking| %>
        <li class="card-dash-infos list-group-item d-flex justify-content-between"><%= "#{booking.user.first_name} is going to #{booking.travel.destination}" %>
        <% if policy(Booking).destroy? %>
       <%= link_to("delete the booking", booking_path(booking), remote: true, method: :delete) %>

       <%end%>
       </li>
      <% end %>
    </ul>
  </div>
  <div class="card">
    <div class="my-ship">
    <h4>My Spaceship Management</h4>
    </div>
          <div data-controller="countbookings">
            <%= render partial: "bookings/my_bookings", locals: { my_bookings: @my_bookings} %>
          </div>


  </div>

</div>
<br>

<a class="btn btn-primary"><%= link_to("Back to all travels", travels_path) %></a>
