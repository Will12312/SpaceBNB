<h1>my bookings</h1>
<br>
<div class="flex-box">
  <div class="card">
    <div class="my-ship">
    <h4>My futur travels</h4>
    </div>
    <ul class="list-group list-group-flush">
      <% @bookings.each do |booking| %>
        <li class="card-dash-infos list-group-item d-flex justify-content-between"><%= "#{booking.user.first_name} is going to #{booking.travel.destination}" %>
        <% if policy(Booking).destroy? %>
       <a <%= link_to("Delete", booking_path(booking), method: :delete) %></a>

       <%end%>
       </li>
      <% end %>
    </ul>
  </div>
  <div class="card">
    <div class="my-ship">
    <h4>My Spaceship Management</h4>
    </div>
         <% total_money = 0 %>
        <% @travels.each do |travel| %>
      <div class="my-ship">
        <h5><%="#{travel.name_of_vehicle}"%></h5>
      <div>
            <p><%="#{travel.seats_available} seats available"%> | <%="#{travel.people_onboard} people on board" %></p>
            <p><%="Total earnings : #{travel.people_onboard * travel.price}"%></p>
            <% total_money += travel.people_onboard * travel.price %>
      </div>
      </div>
        <% end %>
        <div class="my-ship">
        <h6 class="fix-bottom"><%= "Your total earning is #{total_money}â‚¬." %></h6>
        </div>
  </div>

</div>
<br>
<a class="btn btn-primary"<%= link_to("Back to all travels", travels_path) %></a>

